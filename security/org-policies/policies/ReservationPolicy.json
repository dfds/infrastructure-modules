                    "aws:PrincipalArn": [
                        "arn:aws:iam::*:role/OrgRole",
                        "arn:aws:iam::*:role/aws-reserved/sso.amazonaws.com/*/AWSReservedSSO_CloudAdmin_*",
                        "arn:aws:iam::*:role/aws-reserved/sso.amazonaws.com/*/AWSReservedSSO_Billing_*"
                    ]
                }
            }
        },
        {
            "Sid": "ElastiCacheDenyAccessToRI",
